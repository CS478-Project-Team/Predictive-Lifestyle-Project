@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <!-- Hero Section -->
    <h1 class="display-4 mb-3">Welcome to HealthPredictor</h1>
    <p class="lead mb-4">
        Discover insights into your health based on your lifestyle choices. Start your journey to a healthier life today!
    </p>

    <!-- Main Buttons -->
    <div class="d-flex justify-content-center gap-3 mb-5 flex-wrap">
        <a asp-controller="Health" asp-action="Create" class="btn btn-primary btn-lg">Start Assessment</a>
        <a asp-controller="Health" asp-action="History" class="btn btn-success btn-lg">View Past Predictions</a>
        <a asp-controller="Health" asp-action="" style="color: white" class="btn btn-info btn-lg">Explore Recommendations</a>
    </div>

    <!-- Features Section -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <h3>Personalized Predictions</h3>
            <p>Get tailored insights based on your unique lifestyle data.</p>
        </div>
        <div class="col-md-4 mb-4">
            <h3>Lifestyle Recommendations</h3>
            <p>Receive actionable tips to improve your health and <br> well-being.</p>
        </div>
        <div class="col-md-4 mb-4">
            <h3>Data-Driven Insights</h3>
            <p>Understand how your habits impact your overall health using analytics.</p>
        </div>
    </div>
</div>