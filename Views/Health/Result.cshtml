@model Predictive_Lifestyle_Project.Models.Prediction
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <h2>Your Prediction</h2>
            <p><strong>Score:</strong> @Model.Score</p>
            @if (!string.IsNullOrEmpty(Model.Label))
            {
                <p><strong>Risk:</strong> @Model.Label</p>
            }
            @if (Model.HealthEntry is not null)
            {
                <p><strong>BMI:</strong> @Model.HealthEntry.Bmi</p>
            }
            <a asp-action="History" class="btn btn-link">History</a>
        </div>
    </div>
</div>
