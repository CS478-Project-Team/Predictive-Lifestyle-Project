@model Predictive_Lifestyle_Project.Models.ViewModels.HealthEntryViewModel

<form asp-controller="Health" asp-action="Create" method="post" novalidate>
    @Html.AntiForgeryToken()

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row g-3">

        <div class="col-md-3">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="form-control" type="number" min="18" max="100" inputmode="numeric" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="SexAtBirth" class="form-label"></label>
            <select asp-for="SexAtBirth" class="form-select">
                <option value="M">M</option>
                <option value="F">F</option>
                <option value="O">O</option>
            </select>
            <div class="form-text">Allowed: M, F, O</div>
            <span asp-validation-for="SexAtBirth" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="HeightIn" class="form-label"></label>
            <input asp-for="HeightIn" class="form-control" type="number" min="100" max="250" step="0.1" placeholder="inches" />
            <span asp-validation-for="HeightIn" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="WeightLbs" class="form-label"></label>
            <input asp-for="WeightLbs" class="form-control" type="number" min="30" max="300" step="0.1" placeholder="lbs" />
            <span asp-validation-for="WeightLbs" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="DailyCal" class="form-label"></label>
            <input asp-for="DailyCal" class="form-control" type="number" min="60" max="250" inputmode="numeric" placeholder="kcal/day (avg)" />
            <span asp-validation-for="DailyCal" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="RestingHr" class="form-label"></label>
            <input asp-for="RestingHr" class="form-control" type="number" min="30" max="200" inputmode="numeric" placeholder="bpm" />
            <span asp-validation-for="RestingHr" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="AlcoholicDrinksPerWeek" class="form-label"></label>
            <input asp-for="AlcoholicDrinksPerWeek" class="form-control" type="number" min="1" max="200" inputmode="numeric" placeholder="drinks/week" />
            <span asp-validation-for="AlcoholicDrinksPerWeek" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="StepsPerDay" class="form-label"></label>
            <input asp-for="StepsPerDay" class="form-control" type="number" min="0" step="1" inputmode="numeric" placeholder="steps/day" />
            <span asp-validation-for="StepsPerDay" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="SleepHours" class="form-label"></label>
            <input asp-for="SleepHours" class="form-control" type="number" min="0" max="24" step="0.1" placeholder="hours/night" />
            <span asp-validation-for="SleepHours" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="SmokeOrVape" class="form-label"></label>
            <select asp-for="SmokeOrVape" class="form-select">
                <option value="N">N</option>
                <option value="Y">Y</option>
            </select>
            <div class="form-text">Y = Yes, N = No</div>
            <span asp-validation-for="SmokeOrVape" class="text-danger"></span>
        </div>


    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Health" asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
