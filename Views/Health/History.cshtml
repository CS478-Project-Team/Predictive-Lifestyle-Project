@model IReadOnlyList<Predictive_Lifestyle_Project.Models.Prediction>

<h2>Your Prediction History</h2>

@if (!Model.Any())
{
    <p>You don't have any saved predictions yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Age</th>
                <th>Label</th>
                <th>Score</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.CreatedUtc.ToLocalTime().ToString("g")</td>
                    <td>@p.HealthEntry?.Age</td>
                    <td>@p.Label</td>
                    <td>@p.Score</td>
                    <td>
                        <a asp-action="Result" asp-route-id="@p.Id">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
