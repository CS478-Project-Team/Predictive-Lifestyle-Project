@model IEnumerable<Predictive_Lifestyle_Project.Models.Prediction>
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <h2>Prediction History</h2>
            <canvas id="lineChart"></canvas>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <table class="table">
                <thead><tr><th>Date (UTC)</th><th>Score</th><th>Label</th><th>BMI</th><th></th></tr></thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>@p.CreatedUtc</td>
                            <td>@p.Score</td>
                            <td>@p.Label</td>
                            <td>@p.HealthEntry?.Bmi</td>
                            <td><a asp-action="Result" asp-route-id="@p.Id">view</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>